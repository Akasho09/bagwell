model Image {
  id          String   @id @default(uuid())
  imagePath    String
  category    String   // or enum
  gender Gender @default(Male)
  prompt String?
  description String?
  like Int @default(0)
  createdAt   DateTime @default(now())

  @@index([category])
  @@schema("public")
}

enum Category {
  NATURE
  TECH
  AESTHETIC
  SPORTS
  @@schema("public")
}
 
enum Gender {
  Male 
  Female
  Unisex
  @@schema("public")
}

