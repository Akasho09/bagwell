generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public"]
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String?

  @@schema("public")
}

model Image {
  id        String   @id @default(uuid())
  imagePath String
  category  String // or enum
  prompt    String?
  like      Int      @default(0)
  createdAt DateTime @default(now())

  @@index([category])
  @@schema("public")
}

enum Category {
  NATURE
  TECH
  AESTHETIC
  SPORTS

  @@schema("public")
}

